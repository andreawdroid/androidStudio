<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DBF9DB"
    tools:context="agencia.viajes.agenciaActivity">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="170dp"
            app:srcCompat="@drawable/viaje"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:text="@string/Choose_your_trip"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="60dp"/>



    </androidx.appcompat.widget.LinearLayoutCompat>


    <TextView
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="20dp"
        android:text="METODOS DE PAGO"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pago1"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="20dp"
                    app:srcCompat="@drawable/avevillas" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/pago2"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_marginHorizontal="20dp"
                        app:srcCompat="@drawable/bancobogota" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pago3"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="20dp"
                    app:srcCompat="@drawable/bancolombia" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/pago4"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_marginHorizontal="20dp"
                        app:srcCompat="@drawable/davivienda" />

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">




                    <Button
                        android:id="@+id/buttonpagar"
                        android:layout_width="190dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="90dp"
                        android:layout_marginVertical="0dp"
                        android:backgroundTint="@color/green"
                        android:text="@string/buy"
                        android:textColor="@color/white" />

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>


</LinearLayout>